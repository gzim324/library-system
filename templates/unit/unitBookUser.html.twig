{% extends 'base.html.twig' %}

{% block title %}Library|Unit{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('details_book', {"id": book.id}) }}">Details</a>
                </li>
            </ul>
        </div>
    </nav>

    <table class="table table-bordered">
        {% for unit in selectUnit %}
            <tr>
                <td>{{ unit.unit }}</td>
                {% if unit.borrow == false %}
                    <td>Available</td>
                    <td><a href="{{ path('borrow-book', {'id': unit.id}) }}" class="btn btn-dark">Wypo≈ºycz</a></td>
                {% else %}
                    <td>Borrowed</td>
                    <td><a href="#" class="btn btn-dark">Oddaj</a></td>
                {% endif %}
            </tr>
        {% else %}
            <p>No books</p>
        {% endfor %}
    </table>


{% endblock %}
