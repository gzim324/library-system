{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-lg-6 col-md-6 col-xs-12">
        <h2>Profile</h2> <hr>
        {{ form_start(formSettings, {"attr": {"novalidate": "novalidate"}}) }}
        <div class="form-group">
            <label>Username</label> {{ form_widget(formSettings.username) }}
        </div>
        <div class="form-group">
            <label>Password</label> <a href="{{ path('fos_user_change_password', {'id': app.user.id}) }}"><i>Change password</i></a>
        </div>
        <div class="form-group">
            <label>Email</label> {{ form_widget(formSettings.email) }}
        </div>
        <div class="form-group">
            <label>Phone</label> {{ form_widget(formSettings.phone) }}
        </div>
        <div class="form-group">
            {{ form_widget(formSettings.submit, {'attr': {'class': 'btn btn-dark'}}) }}
        </div>
    </div>
    {{ form_end(formSettings) }} <br>


{% endblock %}